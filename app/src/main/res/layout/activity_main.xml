<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="abdalion.me.integradorcomida.MainActivity"
    android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mis comidas!"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="#ffffff"
            android:layout_marginTop="25sp"
            android:textSize="40sp"
            android:layout_centerHorizontal="true"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donde comer"
            android:textSize="30sp"
            android:padding="15sp"
            android:textColor="#ffffff"
            android:background="@color/colorPrimaryText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150sp"
            android:id="@+id/activity_main_btn_donde_comer"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recetas"
            android:textSize="30sp"
            android:padding="15sp"
            android:textColor="#ffffff"
            android:background="@color/colorPrimaryText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:id="@+id/activity_main_btn_recetas"
            android:layout_below="@+id/activity_main_btn_donde_comer"/>


</RelativeLayout>
